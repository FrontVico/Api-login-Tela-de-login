{
  "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      }
  },
  "include": ["./src/**/*"]
}